{    "$schema": "https://schema.management.azure.com/schemas/viewdefinition/0.0.1-preview/ViewDefinition.json#",
        "views": [
        {
            "kind": "Overview",
            "properties": {
                "header": "Welcome to the ticket creation sample Azure Managed Application.",
                "description": "This managed application supports creating service now tickets."
            }
        },
        {
            "kind": "CustomResources",
            "properties": {
                "displayName": "Tickets",
                "version": "1.0.0",
                "resourceType": "tickets",
                "commands": [
                    {
                        "displayName": "Mark ticket as done",
                        "path": "updateStatus"
                    }
                ],
                "createUIDefinition": {
                    "parameters": {
                        "steps": [
                            {
                                "name": "serviceNowTicket",
                                "label": "Create Service Now ticket",
                                "subLabel": {
                                        "preValidation": "Create ticket",
                                        "postValidation": "Done"
                                },
                                "bladeTitle": "Create Service Now ticket",
                                "elements": [
                                        {
                                                "name": "displayName",
                                                "type": "Microsoft.Common.TextBox",
                                                "label": "Display name",
                                                "defaultValue": "",
                                                "toolTip": "",
                                                "constraints": {
                                                        "required": true
                                                }
                                        },
                                        {
                                                "name": "category",
                                                "type": "Microsoft.Common.DropDown",
                                                "label": "Category",
                                                "defaultValue": "",
                                                "toolTip": "",
                                                "constraints": {
                                                    "allowedValues": [
                                                        {
                                                            "label": "General",
                                                            "value": "General"
                                                        },
                                                        {
                                                            "label": "Informational",
                                                            "value": "Informational"
                                                        },
                                                        {
                                                            "label": "Error",
                                                            "value": "Error"
                                                        },
                                                        {
                                                            "label": "Warning",
                                                            "value": "Warning"
                                                        }
                                                    ],
                                                    "required": true
                                                }
                                        },
                                        {
                                                "name": "status",
                                                "type": "Microsoft.Common.DropDown",
                                                "label": "Status",
                                                "defaultValue": "",
                                                "toolTip": "",
                                                "constraints": {
                                                    "allowedValues": [
                                                        {
                                                            "label": "Created",
                                                            "value": "Created"
                                                        },
                                                        {
                                                            "label": "Accepted",
                                                            "value": "Accepted"
                                                        },
                                                        {
                                                            "label": "In Progress",
                                                            "value": "In Progress"
                                                        },
                                                        {
                                                            "label": "Completed",
                                                            "value": "Completed"
                                                        }
                                                    ],
                                                    "required": true
                                                }
                                        },
                                        {
                                                "name": "description",
                                                "type": "Microsoft.Common.TextBox",
                                                "label": "Description",
                                                "defaultValue": "",
                                                "toolTip": "",
                                                "constraints": {
                                                        "required": true
                                                }
                                        }
                                ]
                            }
                        ],
                        "outputs": {
                                "displayName": "[steps('serviceNowTicket').displayName]",
                                "category": "[steps('serviceNowTicket').category]",
                                "description": "[steps('serviceNowTicket').description]",
                                "status": "[steps('serviceNowTicket').status]"
                        }
                    }
                },
                "columns": [
                    {
                        "key": "properties.displayName",
                        "displayName": "Name"
                    },
                    {
                        "key": "properties.category",
                        "displayName": "Category"
                    },
                    {
                        "key": "properties.status",
                        "displayName": "Status"
                    },
                    {
                        "key": "properties.description",
                        "displayName": "Description",
                        "optional": true
                    }
                ]
            }
        },
        {
            "kind": "Associations",
            "properties": 
            {
                "description": "Create service request tickets!",
                "displayName": "Service Request Tickets",
                "targetResourceType": "Microsoft.Storage/storageAccounts",
                "columns": [
                    {
                        "key": "properties.ticketType",
                        "displayName": "Ticket Type"
                    },
                    {
                        "key": "properties.resourceType",
                        "displayName": "Resource Type"
                    },
                    {
                        "key": "properties.serviceNowSystemId",
                        "displayName": "System Id",
                        "optional": true
                    }
                ]
            }
        },
        {
            "kind": "CustomMarkdown",
            "properties": {
                "displayName": "About Service Now",
                "version": "1.0.0",
                "content": "# Service Now\nGo to Service Now [homepage](https://www.servicenow.com/) and read about **what's new** and **how to start**.\n## Useful links:\n * [Service Now documentation](https://docs.servicenow.com/)\n * [Service Now developers page](https://developer.servicenow.com/)\n"
            }
        }
    ]
}